# Enable kwm compatibility mode
khd mode prefix on_enter kwmc config border focused color 0x77FFFF00

# Activate prefix mode
ctrl + shift - w	:    khd -e "mode activate prefix"

# Set Space Tiling Mode To BSP
prefix - b			:    kwmc space -t bsp

# Set Space Tiling Mode To Floating
prefix - f			:    kwmc space -t float
# prefix - s			:    kwmc window -c split-mode toggle

prefix - escape		:    khd -e "mode activate default"

# kwm settings
prefix - k            :    kwmc window -f next
prefix - j            :    kwmc window -f prev
prefix + shift - k    :    kwmc window -s next
prefix + shift - j    :    kwmc window -s prev

prefix + shift - k	:    kwmc window -s next
prefix + shift - j	:    kwmc window -s prev

prefix - l	: kwmc space -fExperimental right
prefix - h	: kwmc space -fExperimental left
prefix + shift - l : kwmc window -m space right; kwmc space -fExperimental right
prefix + shift - h : kwmc window -m space left; kwmc space -fExperimental left

# tmux settings
prefix - left  : khd -e "mode activate default"; khd -p "ctrl + shift - h"; khd -e "mode activate prefix"
prefix - down  : khd -e "mode activate default"; khd -p "ctrl + shift - j"; khd -e "mode activate prefix"
prefix - up    : khd -e "mode activate default"; khd -p "ctrl + shift - k"; khd -e "mode activate prefix"
prefix - right : khd -e "mode activate default"; khd -p "ctrl + shift - l"; khd -e "mode activate prefix"

