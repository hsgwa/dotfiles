# Enable kwm compatibility mode
khd mod_trigger_timeout 0.0
khd mode prefix on_enter kwmc config border focused color 0x77FFFF00

# Set Space Tiling Mode To BSP
ctrl + alt + cmd - b			:    kwmc space -t bsp

# Set Space Tiling Mode To Floating
ctrl + alt + cmd - f			:    kwmc space -t float
# prefix - s			:    kwmc window -c split-mode toggle

ctrl + alt + cmd - w  : khd -p "cmd - w";

ctrl + shift - k  [Google Chrome]:     khd -p "alt + cmd - right"
# kwm settings
ctrl + alt + cmd - r : khd -e "reload"
ctrl + alt + cmd - k            :    kwmc window -f next
ctrl + alt + cmd - j            :    kwmc window -f prev
ctrl + alt + cmd + shift - k    :    kwmc window -s next
ctrl + alt + cmd + shift - j    :    kwmc window -s prev
ctrl + alt + cmd - i    [Google Chrome]: khd -p "alt + cmd - right";
ctrl + alt + cmd - u    [Google Chrome]: khd -p "alt + cmd -left";

ctrl + alt + cmd - l	: kwmc space -fExperimental right;
ctrl + alt + cmd - h	: kwmc space -fExperimental left
ctrl + alt + cmd + shift - l : kwmc window -m space right; 
ctrl + alt + cmd + shift - h : kwmc window -m space left;
