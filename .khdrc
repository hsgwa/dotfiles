# Enable kwm compatibility mode
khd mode prefix on_enter kwmc config border focused color 0x77FFFF00

# Activate prefix mode
ctrl + shift - w			:    khd -e "mode activate prefix"

# Set Space Tiling Mode To BSP
prefix - b			:    kwmc space -t bsp

# Set Space Tiling Mode To Floating
prefix - f			:    kwmc space -t float
prefix - s			:    kwmc window -c split-mode toggle

prefix - escape		:    khd -e "mode activate default"

# Give Focus To Window
prefix - h            :    kwmc window -f west
prefix - l            :    kwmc window -f east
prefix - j            :    kwmc window -f south
prefix - k            :    kwmc window -f north

# Modify Window Size
prefix + shift - h			:    kwmc window -c expand 0.05 west;	kwmc window -c reduce 0.05 east
prefix + shift - j			:    kwmc window -c expand 0.05 south;	kwmc window -c reduce 0.05 north
prefix + shift - l			:    kwmc window -c expand 0.05 east;	kwmc window -c reduce 0.05 west
prefix + shift - k			:    kwmc window -c expand 0.05 north;	kwmc window -c reduce 0.05 south

# Swap Focused Window
prefix + shift + ctrl - h	:    kwmc window -s west
prefix + shift + ctrl - j	:    kwmc window -s south
prefix + shift + ctrl - l	:    kwmc window -s east
prefix + shift + ctrl - k	:    kwmc window -s north

prefix - i	: kwmc space -fExperimental right
prefix - u	: kwmc space -fExperimental left
prefix + shift - i	: kwmc window -m space right;	kwmc space -fExperimental right
prefix + shift - u	: kwmc window -m space left;	kwmc space -fExperimental left
